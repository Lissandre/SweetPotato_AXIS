#_container
  position absolute
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.85)
  display flex
  flex-direction column
  align-items center
  justify-content center
  pointer-events none
  opacity 0
  transition 0.55s opacity ease-out
  &.active
    opacity 1
    pointer-events auto
    transition 0.55s opacity ease-out

  & #_username
    height 45px
    width 300px
    border-radius 6px
    border 5px solid black
    outline none
    text-align center
    font-size 24px
    text-transform uppercase
    font-weight bold
    pointer-events none
    opacity 0
    transition 0.55s opacity ease-out
    &.active
      opacity 1
      pointer-events auto
      transition 0.55s opacity ease-out
